<div class="container">
  <div class="row mt-5 mb-4">
    <div class="col-2">
     <h3 class="table-active">マイページ</h3>
    </div>
  </div>
  </br>
  <div class="row">
    <div class="col-lg-2">
     <h4>登録情報</h4>
    </div>
    <div class="my-auto">
     <%= link_to "編集する", edit_customers_path, class: "btn btn-info" %>
    </div>
  </div>
  </br>

  <div class="row">
   <div class="col-lg-9">
    <table class="table table-bordered">
      <tr>
        <th class="col-lg-2 active">氏名</th>
        <td><%= @customer.last_name %>&emsp;<%= @customer.first_name %></td>
      </tr>
      <tr>
        <th class="col-lg-2 active">カナ</th>
        <td><%= @customer.last_name_kana %>&emsp;<%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th class="col-lg-2 active">郵便番号</th>
        <td><%= @customer.post_code.to_s.insert(3, "-") %></td>
      </tr>
      <tr>
        <th class="col-lg-2 active">住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th class="col-lg-2 active">電話番号</th>
        <td><%= @customer.phone_number.to_s.insert(3, "-").insert(8, "-") %></td>
      </tr>
      <tr>
        <th class="col-lg-2 active">メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </table>
   </div>
  </div>

  <div class="row">
        <div class="col-lg-2">
            <h4>配送先</h4>
        </div>
        <div class="my-auto">
          <%= link_to "一覧を見る", addresses_path, class: "btn btn-info" %>
        </div>
    </div>
    </br>
    <div class="row">
        <div class="col-lg-2">
            <h4>注文履歴</h4>
        </div>
        <div class="my-auto">
          <%= link_to "一覧を見る", orders_path, class: "btn btn-info" %>
        </div>
    </div>
</div>