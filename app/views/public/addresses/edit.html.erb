<div class="container">
  <div class="row mt-5 mb-4">
    <div class="col-lg-8">
      <h4 class="table-active">配送先編集</h4>
     </div>
  </div>

  <div class="row">
    <div class="col-lg-9">
     <%= form_with model: @address do |f| %>
    <table class="edit_customer">
      <tr>
        <th class="col-lg-2 active">郵便番号</th>
        <td><%= f.number_field :post_code, placeholder: '半角/ハイフン不要' %></td>
      </tr>

      <tr>
        <th class="col-lg-2 active">住所</th>
        <td><%= f.text_area :address, placeholder: '東京都渋谷区代々木神園町0-0' %></td>
      </tr>

      <tr>
        <th class="col-lg-2 active">宛名</th>
        <td><%= f.text_field :name, placeholder: '令和道子' %></td>
      </tr>

      <tr>
        <td>
        <%= f.submit "保存", class:"btn btn-primary" %>
        </td>
      </tr>
      </table>
      <% end %>
      </div>
  </div>
</div>