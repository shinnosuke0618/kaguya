<div class="container p-5">
  
  <div class="row">
    <h3>ジャンル編集</h3>
  </div>
  
  <div class="row mt-5">
    <%= form_with model: @genre, url: admin_genre_path, local:true do |f| %>
    <div class="form-group">
      <%= f.label :"ジャンル名" %>
      <%= f.text_field :name, autofocus: true, placeholder:"ジャンル名" %>
      <%= f.submit "変更を保存" %>
    </div>
   <% end %>
  </div>
  
</div>