<div class="container">
  
  <div class="row mt-5 mb-4">
    <div class="col-lg-4">
      <h3 class="table-active"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>
    </div>
  </div>
  
  <div class="row">
    <div class="col-lg-7">
      <table class="admin_show_customer">
        <tr class="active">
          <th>顧客ID</th>
          <td><%= @customer.id %></td>
        </tr>

        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %><%= @customer.first_name %></td>
        </tr>

        <tr>
          <th>フリガナ</th>
          <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        </tr>

        <tr>
          <th>郵便番号</th>
          <td><%= @customer.post_code.to_s.insert(3, "-") %></td>
        </tr>

        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>

        <tr>
          <th>電話番号</th>
          <td><%= @customer.phone_number.to_s.insert(3, "-").insert(8, "-") %></td>
        </tr>

        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>

        <tr>
          <th>会員ステータス</th>
          <td><%= @customer.is_deleted? ? "退会" : "有効" %></td>
        </tr>
      </table>
    </div>
  </div>
  
  <div class="row">
    <div class="col-lg-2 my-auto">
      <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-info" %>
    </div>
    <div class="col-log-2 my-auto">
      <%= link_to "注文履歴一覧を見る", admin_orders_path, class: "btn btn-info" %>
    </div>
  </div>
  
</div>